{
  "name": "branch-notes",
  "displayName": "Branch Notes",
  "description": "Automatically open a note file for your current Git branch.",
  "publisher": "oramadan",
  "version": "0.0.1",
  "author": {
    "name": "Omar Ramadan"
  },
  "repository": {
    "type": "git",
    "url": "httpsis.com/oramadn/branch-notes.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "branch-notes.openNote",
        "title": "Branch Notes: Open Note for Current Branch"
      },
      {
        "command": "branch-notes.openNoteFile",
        "title": "Open Note File"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "branch-notes.openNote",
          "when": "git.state == 'initialized'"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "branch-notes-container",
          "title": "Branch Notes",
          "icon": "images/notes-icon.svg"
        }
      ]
    },
    "views": {
      "branch-notes-container": [
        {
          "id": "branch-notes-view",
          "name": "Project Notes",
          "type": "tree",
          "icon": "images/notes-icon.svg"
        }
      ]
    },
    "configuration": {
      "properties": {
        "branchNotes.storagePath": {
          "type": "string",
          "default": "",
          "description": "The absolute path to the directory where all branch notes will be stored."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
